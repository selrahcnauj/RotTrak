<resources>

    <style name="Widget.Theme.RotTrak.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.RotTrak.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="SplashTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <!-- Optional, on Android 5+ you can modify the colorPrimaryDark color to match the windowBackground color for further branding-->
        <!-- <item name="colorPrimaryDark">@android:color/white</item> -->
    </style>

    <style name="header">
        <item name="android:textSize">
            28sp
        </item>
        <item name="android:letterSpacing">
            0.01
        </item>
        <item name="android:textColor">
            #000000
        </item>
        <item name="lineHeight">
            24sp
        </item>
        <item name="fontFamily">
            @font/montserrat_extrabold
        </item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ListTitle">
        <item name="lineHeight">
            20sp
        </item>
        <item name="fontFamily">
            @font/montserrat_bold
        </item>
        <item name="android:textSize">
            16sp
        </item>

        <item name="android:letterSpacing">
            0.01
        </item>

        <item name="android:textColor">
            #000000
        </item>
    </style>

    <style name="ListEstimated">
        <item name="lineHeight">
            16sp
        </item>
        <item name="fontFamily">
            @font/montserrat_bold
        </item>
        <item name="android:textSize">
            13sp
        </item>

        <item name="android:letterSpacing">
            0.02
        </item>

        <item name="android:textColor">
            #FD5E53
        </item>
    </style>

    <style name="ListDate">

        <item name="lineHeight">
            12sp
        </item>
        <item name="fontFamily">
            @font/montserrat_medium
        </item>
        <item name="android:textSize">
            10sp
        </item>

        <item name="android:letterSpacing">
            0.02
        </item>

        <item name="android:textColor">
            #CBCBCB
        </item>

    </style>

    <style name="ListCategory">

        <item name="lineHeight">
            13sp
        </item>
        <item name="fontFamily">
            @font/montserrat_semibold
        </item>
        <item name="android:textSize">
            11sp
        </item>

        <item name="android:letterSpacing">
            0.02
        </item>

    </style>

    <style name="HeaderTitle">

        <item name="lineHeight">
            24sp
        </item>
        <item name="fontFamily">
            @font/montserrat_extrabold
        </item>
        <item name="android:textSize">
            20sp
        </item>

        <item name="android:letterSpacing">
            0.01
        </item>

        <item name="android:textColor">
            #000000
        </item>

    </style>

    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Choice">


        <item name="chipCornerRadius">5dp</item>

        <item name="chipBackgroundColor">@color/category_chip_stroke_tint</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipStrokeColor">@color/category_chip_stroke_tint</item>
        <item name="checkedIconVisible">false</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="ChipCategoryFont">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="TextInput" parent="ThemeOverlay.Material3.TextInputEditText.FilledBox">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorError">@color/accent_red</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.Subtitle1</item>
        <item name="textAppearanceCaption">@style/TextAppearance.App.Caption</item>
 </style>

    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">#FF5A5A5A</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AlertDialog_Fullscreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

    </style>

</resources>